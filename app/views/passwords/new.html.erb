<h1 class="sr-only">Forgot Password</h1>
<div>
  <div class="row">
    <div class="col-24 d-flex flex-column justify-content-center">
      <div class="row">
        <div class="col-md-15 col-lg-12 col-xl-10 mx-auto">
          <div class="pb-4">
            <%= render partial: 'devise/shared/logo' %>
          </div>
          <div class="card shadow shadow-sm card-square">
            <div class="card-header">
              <div class="mb-0 h3">Forgot Password</div>
            </div>
            <div class="card-body">
              <%= form_with(url: passwords_create_path, method: :post ) do |f| %>
                <div class="form-group">
                  <label for="email">Email</label>
                  <input type="email" autofocus="autofocus" autocomplete="email" class="form-control form-control-lg rounded-0" name="email" id="email" required="" />
                </div>
                <div class="form-group">
                  <div class="text-left">
                    <%= link_to "Back To Login", new_user_session_path %>
                  </div>
                </div>
                <button type="submit" class="btn btn-outline-primary btn-lg float-right btn-square px-5" id="login">Reset My Password</button>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
